---
batch_connect:
  template: vnc
script:
  <%- if /frisco/.match(cluster) == nil -%>
  native:
    - "-N"
    - "1"
    - "-n"
    - "<%= num_cores %>"
    <%- if gpu_type != "none" -%>
    - "--gres=gpu:<%= gpu_type %>"
    <%- end -%>
    <%- if memtask != "default" -%>
    - "--mem"
    - "<%= memtask %>"
    <%- end -%>
    <%- if nodelist != nil -%>
    - "-w"
    - "<%= nodelist %>"
    <%- end -%>
  <%- end -%>

