---
batch_connect:
  template: vnc
script:
  <%- if /frisco/.match(cluster) == nil -%>
  native:
    - "-n"
    - "<%= bc_num_slots %>"
    - "-N"
    - "<%= num_nodes %>"
    <%- if gpu_type != "none" -%>
    - "--gres=gpu:<%= gpu_type %>"
    <%- end -%>
    <%- if memtask != "default" -%>
    - "--mem"
    - "<%= memtask %>"
    <%- end -%>
  <%- end -%>
